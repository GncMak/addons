<odoo>
    <record model="ir.ui.view" id="crm_salesperson_planner_maintenance_application_steps_tree_view">
        <field name="name">CRM - Salesperson Planner Maintenance Application Steps Tree</field>
        <field name="model">crm.salesperson.planner.maintenance.application.steps</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Application Steps">
                <field name="name" />
                <field name="active" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="crm_salesperson_planner_maintenance_application_steps_form_view">
        <field name="name">CRM - Salesperson Planner Maintenance Application Steps Form</field>
        <field name="model">crm.salesperson.planner.maintenance.application.steps</field>
        <field name="arch" type="xml">
            <form string="Maintenance Application Steps">
                <sheet string="Maintenance Application Steps">
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="crm_salesperson_planner_maintenance_application_steps_action">
        <field name="name">Maintenance Application Steps</field>
        <field name="res_model">crm.salesperson.planner.maintenance.application.steps</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Enter the Maintenance Application steps.
            </p>
        </field>
    </record>
</odoo>
