<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_timer_form_inherit" model="ir.ui.view">
        <field name="name">view.project.task.timer.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="start_task" type="object" string="Start" class="oe_highlight o_invoice_send" groups="base.group_user" attrs="{'invisible':[('start_date_hide', '!=', False)]}"/>
                <button context="{'default_action_type': 'end_task'}" name="%(action_project_task_timer_action_wizard)d" type="action" string="End" class="oe_highlight o_invoice_send" groups="base.group_user" attrs="{'invisible':[('end_date_hide', '!=', False)]}"/>
            </xpath>

            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Task Timers">
                    <field name="start_date_hide" invisible="1"/>
                    <field name="end_date_hide" invisible="1"/>
                    <field name="task_timer_ids" readonly="1">
                        <tree>
                            <field name="employee_id" />
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="process_type"/>
                            <field name="duration" widget="float_time"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>